@model PerguntaViewModel

@{
    ViewData["Title"] = "Nova Pergunta x Resposta";
}


<h3 style="padding-top: 50px">@ViewData["Title"]</h3>
<hr />

@if (TempData["Success"] != null)
{
    <div class="green">
        <p><strong>Successo:</strong> @TempData["Success"].ToString()</p>
    </div>
}

<div class="row">
    <div class="col-md-12 cmd12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class=" filtroLeft form-group ">
                <label for="">Categoria</label>
                @Html.DropDownListFor(n => n.CategoriaId, Model.CategoriasList, "Selecione", new { @class = "form-control" })
            </div>
            <div class="filtroR form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="OperadorId" class="control-label"></label>
                    <input asp-for="OperadorId" class="form-control" />
                    <span asp-validation-for="OperadorId" class="text-danger"></span>*@
            </div>
            <br />
            <div class="form-group">
                <label for="">Resposta</label>

            </div>
            <div class="comment-text-area form-group">
                <textarea asp-for="Resposta.Descricao" class="textinput"></textarea>
                <span asp-validation-for="Resposta.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>




